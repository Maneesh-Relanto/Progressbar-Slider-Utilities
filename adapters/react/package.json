{
  "name": "@ai-progress-controls/react",
  "version": "0.1.0",
  "description": "React adapters for AI Progress Controls - Production-ready UI components for AI/ML workflows",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js"
    }
  },
  "files": [
    "dist",
    "src",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "npm run build:esm && npm run build:cjs && npm run build:types",
    "build:esm": "tsc --module esnext --outDir dist/esm",
    "build:cjs": "tsc --module commonjs --outDir dist/cjs",
    "build:types": "tsc --declaration --emitDeclarationOnly --outDir dist",
    "dev": "tsc --watch",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "ai",
    "progress",
    "react",
    "components",
    "llm",
    "streaming",
    "web-components",
    "typescript",
    "ui-components"
  ],
  "author": "Maneesh Thakur",
  "license": "MIT",
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0",
    "ai-progress-controls": "^0.1.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.0 || ^19.0.0",
    "@types/react-dom": "^18.2.0 || ^19.0.0",
    "typescript": "^5.0.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "ai-progress-controls": "file:../.."
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Maneesh-Relanto/ai-progress-controls.git",
    "directory": "adapters/react"
  },
  "bugs": {
    "url": "https://github.com/Maneesh-Relanto/ai-progress-controls/issues"
  },
  "homepage": "https://github.com/Maneesh-Relanto/ai-progress-controls/tree/main/adapters/react#readme"
}
